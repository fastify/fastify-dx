{
  parser: '@babel/eslint-parser',
  parserOptions: {
    requireConfigFile: false,
    ecmaVersion: 2021,
    sourceType: 'module',
    babelOptions: {
      presets: ['@babel/preset-react'],
   },
    ecmaFeatures: {
      jsx: true,
    },    
  },
  extends: [
    'preact',
    'standard',
  ],
  plugins: [
    'react',
  ],
  rules: {
    'react/prop-types': 'off',
    'react/react-in-jsx-scope': 'off',
    'comma-dangle': ['error', 'always-multiline'],
    'import/no-absolute-path': 'off',
  },
  settings: {
    react: {
      version: '18.0',
    },
  },
}
